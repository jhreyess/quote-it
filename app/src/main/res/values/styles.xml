<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- EditText -->
    <style name="TextInputEditText">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Dialog-->
    <style name="BottomSheetModal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dialog</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!-- Bottom Navbar -->
    <style name="Navbar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/bg_navbar</item>
        <item name="itemRippleColor">@color/gray</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconSize">28dp</item>
    </style>

    <!-- PopUp Menu -->
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">?attr/colorSurface</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:elevation">0dp</item>
        <item name="titleTextAppearance">@style/SectionLabel</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingTop">28dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="layout_scrollFlags">scroll</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- Outlined TextInput Layout -->
    <style name="OutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/lighter_gray</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintEnabled">false</item>
    </style>

    <!-- Button -->
    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:insetTop">0.0dp</item>
        <item name="android:insetBottom">0.0dp</item>
    </style>

    <style name="SectionLabel" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LikeIcon" parent="Theme.QuoteIt">
        <item name="colorAccent">@color/pink</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
    </style>

    <style name="FavIcon" parent="Theme.QuoteIt">
        <item name="colorAccent">@color/mustard</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
    </style>

    <!-- WIDGETS -->
    <style name="Widget.QuoteIt.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.QuoteIt.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>