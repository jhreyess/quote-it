<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.ChangePasswordFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/back_to_settings_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:backgroundTint="@android:color/transparent"
            android:importantForAccessibility="no"
            android:minHeight="48dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/collaborators_settings"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Josué Humberto Reyes Suárez"
            android:textColor="@color/gray"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            style="@style/TextAppearance.MaterialComponents.Body1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diego Humberto Álvarez Guzman"
            android:textColor="@color/gray"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            style="@style/TextAppearance.MaterialComponents.Body1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Angel Eduardo Díaz Villarreal"
            android:textColor="@color/gray"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            style="@style/TextAppearance.MaterialComponents.Body1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kevin Verdiguel Flores"
            android:textColor="@color/gray"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            style="@style/TextAppearance.MaterialComponents.Body1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adrian Ruiz Ordaz"
            android:textColor="@color/gray"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

    </LinearLayout>


</LinearLayout>